<!DOCTYPE html>
<html lang="en">
<head>
  <script src="ejs.js"></script>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Catalogo de Computadores TecnologiaLopez</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
  <style>
    body {
      background-image: url('/img/recursos/FONDOS/1.jpg.png'); /* Ruta de tu imagen de fondo */
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      background-color: transparent;
      color: #fff;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: rgba(0, 0, 0, 0.5);
      padding: 20px 0;
    }

    .logo {
      color: #ffffff;
      font-size: 24px;
      text-align: center;
    }

    nav ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      text-align: center;
    }

    nav ul li {
      display: inline;
      margin: 0 10px;
    }

    nav ul li a {
      color: #ffffff;
      text-decoration: none;
    }

    .container {
      padding: 20px;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .product-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
    }

    .product {
      border: 1px solid #fff;
      border-radius: 8px;
      padding: 20px;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .product img {
      max-width: 100%;
      height: auto;
      border-radius: 5px;
    }

    .product h3 {
      margin-top: 10px;
      margin-bottom: 5px;
      font-size: 18px;
    }

    .product p {
      margin-bottom: 10px;
    }

    .product button {
      margin-top: 10px;
      background-color: #007bff;
      color: #ffffff;
      border: none;
      border-radius: 5px;
      padding: 8px 15px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .product button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>

<header>
  <div class="logo">TECNOLOGÍA LÓPEZ</div>
  <nav>
    <ul>
      <li><a href="http://localhost:4000/TecnologiaLopez">Inicio</a></li>
      <li><a href="http://localhost:4000/productos">Productos Electronicos</a></li>
      <li><a href="http://localhost:4000/computadores">Computadores</a></li>
      <li><a href="http://localhost:4000/contact">Contacto</a></li>
    </ul>
  </nav>
</header>

<div class="container">
  <h1 class="text-center">Catálogo de computadora</h1>
  <div class="product-list">
    <!-- Aquí se iteran las imágenes de la colección de naturaleza -->
    <% images.forEach(function(image) { %>
    <div class="product">
      <img src="<%= image.path %>" class="img-fluid rounded" alt="<%= image.description %>">
      <h3><%= image.name %></h3>
      <p><strong>Precio:</strong> $<%= image.price %></p>
      <p><strong>Información:</strong> <%= image.info %></p>
      <!-- Botones adicionales -->
      <div class="d-flex justify-content-between">
        <a href="/naturaleza/<%= image._id %>" class="btn btn-primary"><i class="fas fa-eye"></i> Ver</a>
       
        <button class="btn btn-warning"><i class="fas fa-dollar-sign"></i> Comprar ahora</button>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<footer>
  <div class="container">
    <p>Derechos de autor © 2024 Tecnología López. Todos los derechos reservados por la compañia.</p>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
  const swiper = new Swiper('.swiper', {
    loop: true,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
</script>
</body>
</html>
